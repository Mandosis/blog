{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": [
      "body-parser",
      "compression",
      "cookie-parser",
      "dotenv",
      "express",
      "express-serve-static-core",
      "express-session",
      "helmet",
      "lodash",
      "marked",
      "mime",
      "node",
      "passport",
      "passport-local",
      "pg",
      "sequelize",
      "serve-static",
      "winston"
    ]
  },
  "filesGlob": [
      "**/*.ts",
      "**/*.tsx",
      "!node_modules/**"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
