header
  input(type="text" "[(ngModel)]"="post.title" "(click)"="viewSettings = false")
  button.publish Publish
  button.settings("(click)"="extendSettings()")
    i.fa.fa-cog


section("(click)"="viewSettings = false")

  //- Editor Controls
  ul.controls("(mousedown)"="$event.preventDefault()")
    li
      i.fa.fa-header

      //- Choose heading level
      ul.dropdown
        li("(click)"="insertSyntax('# ', false)")
          span H1
        li("(click)"="insertSyntax('## ', false)")
          span H2
        li("(click)"="insertSyntax('### ', false)")
          span H3
        li("(click)"="insertSyntax('#### ', false)")
          span H4
        li("(click)"="insertSyntax('##### ', false)")
          span H5
        li("(click)"="insertSyntax('###### ', false)")
          span H6

    //- Bold
    li("(click)"="insertSyntax('**', true)")
      i.fa.fa-bold

    //- Italic
    li("(click)"="insertSyntax('_', true)")
      i.fa.fa-italic

    //- Strikethrough
    li("(click)"="insertSyntax('~~', true)")
      i.fa.fa-strikethrough

    //- Ordered List
    li
      i.fa.fa-list-ol

    //- Unordered List
    li
      i.fa.fa-list-ul

    //- Link
    li("(click)"="insertSyntax('[]()', false)")
      i.fa.fa-link

    //- Picture
    li("(click)"="insertSyntax('![]()', false)")
      i.fa.fa-picture-o

  //- Editor Body
  textarea( autofocus "[(ngModel)]"="post.body" "(select)"="getSelected($event)" "(keydown)"="getCaretPosition($event)" "(mousedown)"="getCaretPosition($event)" "(change)"="getCaretPosition($event)")

  //- Preview
  section( class="preview" "[innerHtml]"="post.body | markdown")

footer("(click)"="viewSettings = false")
  section.left
    p.name Markdown
  section.right
    p.name Preview
    p.count Word Count: {{post.body | wordCount }}

aside("[class.open]"="viewSettings")

  p Cover Image
  input(type="file" disabled)

  p Tags
  input(type="text" disabled)

  p url
  input(type="url" "[attr.value]"="post.title | url")
